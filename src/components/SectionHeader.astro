---
interface Props {
  title: string;
  subtitle?: string;
  Tag: "h1" | "h2" | "h3" | "h4";
  size: "sm" | "md" | "lg";
  align: "left" | "center" | "right";
  className?: string;
}

const sizes = {
  sm: "text-base xs:text-lg sm:text-xl",
  md: "text-xl xs:text-2xl sm:text-3xl",
  lg: "text-3xl xs:text-4xl sm:text-5xl",
};

const aligns = {
  left: "text-left",
  center: "text-center",
  right: "text-right",
};

const { title, subtitle, Tag, size, align, className } = Astro.props;
---

<div class:list={["max-w-xl", aligns[align], className]}>
  <Tag class:list={["font-bold", sizes[size]]}>
    {title}
  </Tag>
  {subtitle && <p class="text-muted-foreground">{subtitle}</p>}
</div>
