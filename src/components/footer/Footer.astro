---
import { Icon } from "astro-icon";

import Container from "@/components/elements/Container.astro";
import Logo from "@/components/header/Logo.astro";
import SectionHeader from "@/components/elements/SectionHeader.astro";
---

<footer class="border-t mt-8 sm:mt-16">
	<Container>
		<div class="grid grid-cols-2 gap-8 py-12 sm:grid-cols-4 lg:grid-cols-5">
			<div class="col-span-2 space-y-4">
				<Logo className="text-3xl" />
				<p class="max-w-xs text-xl text-muted-foreground">
					Pasa al siguiente nivel y toma control de tu destino financiero
				</p>
			</div>
			<div class="space-y-5">
				<SectionHeader
					title="Aprende"
					Tag="h3"
					size="sm"
					align="left"
					className="mt-2"
				/>
				<ul class="space-y-2">
					<li class="transition text-muted-foreground">
						<a href="/blog">Blog</a>
					</li>
					<li class="transition text-muted-foreground">
						<a href="/boletin">Boletín</a>
					</li>
					<li class="transition text-muted-foreground">
						<a href="/cursos">Cursos</a>
					</li>
				</ul>
			</div>
			<div class="space-y-5">
				<SectionHeader
					title="Acerca de"
					Tag="h3"
					size="sm"
					align="left"
					className="mt-2"
				/>
				<ul class="space-y-2">
					<li class="transition text-muted-foreground">
						<a href="/">Inicio</a>
					</li>
					<li class="transition text-muted-foreground">
						<a href="/acerca-de">Nosotros</a>
					</li>
					<li class="transition text-muted-foreground">
						<a href="/contacto">Contacto</a>
					</li>
				</ul>
			</div>
			<div class="space-y-4">
				<SectionHeader
					title="Conecta"
					Tag="h3"
					size="sm"
					align="left"
					className="lg:mt-2"
				/>
				<div class="flex gap-4">
					<a
						href="https://twitter.com/retiratejoven"
						target="_blank"
					>
						<Icon
							class="w-8 transition-colors text-muted-foreground hover:text-primary"
							name="mdi:twitter"
						/>
					</a>
					<a
						href="https://youtube.com"
						target="_blank"
					>
						<Icon
							class="w-8 transition-colors text-muted-foreground hover:text-primary"
							name="mdi:youtube"
						/>
					</a>
					<a
						href="https://instagram.com"
						target="_blank"
					>
						<Icon
							class="w-8 transition-colors text-muted-foreground hover:text-primary"
							name="ri:instagram-fill"
						/>
					</a>
				</div>
			</div>
		</div>
		<div
			class="grid grid-cols-1 gap-2 sm:grid-cols-2 lg:grid-cols-5 border-t text-muted-foreground py-6"
		>
			<p class="order-last sm:col-span-2 lg:order-first lg:col-span-3">
				Retirate Joven y Rico &#174; {new Date().getFullYear()} Derechos
				Reservados
			</p>
			<a href="/politica-de-privacidad">Política de privacidad</a>
			<a href="/terminos-y-condiciones">Términos y condiciones</a>
		</div>
	</Container>
</footer>
